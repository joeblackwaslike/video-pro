.fragment
  %pre
    =h fragment.content.html_safe
  .fragment-language.pull-left
    Key:
    = fragment.key 
    | 
    Template Language: 
    = fragment.language
  .actions.pull-right
    = link_to 'Show', fragment
    = link_to 'Edit', edit_fragment_path(fragment)
    = link_to 'Destroy', fragment, :method => :delete, :data => { :confirm => 'Are you sure?' }
.clearfix